{
    "compilerOptions": {
        "allowJs": true,
        "target": "ES6",
        "module": "ESNext",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": false,
        "baseUrl": ".",
        "outDir": "build",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "*": ["node_modules/*"],
            "@src/*": ["./src/*"],
        }
    },
    "include": ["src/**/*"]
}